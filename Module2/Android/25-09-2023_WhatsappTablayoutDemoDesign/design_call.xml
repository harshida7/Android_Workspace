<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#e6e6fa"
    android:outlineSpotShadowColor="#800080"
    android:layout_margin="20dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CProfile_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:civ_border_color="#075e54"
                app:civ_border_width="1.5dp"
               android:src="@drawable/a"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/txtCname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#075e54"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtCnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9327100525"
                android:textColor="@color/design_default_color_on_secondary"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                app:civ_border_color="#075e54"
                android:src="@drawable/audio"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>