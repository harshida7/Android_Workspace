<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductShow">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/amulgold"
        />
    <TextView
        android:id="@+id/tp1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Amul Gold"
        android:layout_below="@id/img1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/tp1"
            android:src="@drawable/amulbutter"/>

        <TextView
            android:id="@+id/tp2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Amul Butter"
            android:layout_below="@id/img2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tp2"
        android:src="@drawable/amulcheese"/>

    <TextView
        android:id="@+id/tp3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Amul Cheese"
        android:layout_below="@id/img3"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tp3"
        android:src="@drawable/amulghee"/>

    <TextView
        android:id="@+id/tp4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Amul Ghee"
        android:layout_below="@id/img4"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tp4"
        android:src="@drawable/amulicecream"/>

    <TextView
        android:id="@+id/tp5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Amul IceCream"
        android:layout_below="@id/img5"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tp5"
        android:src="@drawable/amulkool"/>

    <TextView
        android:id="@+id/tp6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Amul Kool"
        android:layout_below="@id/img6"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tp6"
        android:src="@drawable/amulpaneer"/>

    <TextView
        android:id="@+id/tp7"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Amul Paneer"
        android:layout_below="@id/img7"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />
</RelativeLayout>
</ScrollView>